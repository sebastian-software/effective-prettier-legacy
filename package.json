{
  "name": "@effective/prettier",
  "description": "A leaner and more up-to-date alternative to prettier-eslint.",
  "license": "Apache-2.0",
  "author": "Sebastian Werner <s.werner@sebastian-software.de> (http://sebastian-software.de/werner)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-prettier.git"
  },
  "version": "4.3.1",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": {
    "effective-prettier": "bin/effective-prettier"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "format": "npm run prepare && ./bin/effective-prettier './**/*.{js,ts}'",
    "lint": "tsc --noEmit && eslint '**/*.ts'",
    "prepare": "rimraf dist bin && preppy",
    "release": "git push && release-it --ci patch",
    "release:major": "git push && release-it --ci major",
    "release:minor": "git push && release-it --ci minor",
    "test": "jest --silent",
    "watch": "preppy --watch"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chalk": "^4.1.2",
    "core-js": "^3.16.2",
    "eslint": "^7.32.0",
    "figures": "^3.2.0",
    "glob-parent": "^6.0.1",
    "globby": "^11.0.4",
    "is-path-inside": "^4.0.0",
    "meow": "^10.1.1",
    "p-queue": "^7.1.0",
    "physical-cpu-count": "^2.0.0",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@effective/eslint-config": "^3.10.3",
    "@types/app-root-path": "^1.2.4",
    "@types/jest": "^27.0.1",
    "@types/stylelint": "^13.13.1",
    "@types/vscode": "^1.59.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "preppy": "^10.10.2",
    "prettier-package-json": "^2.6.0",
    "release-it": "^14.11.5",
    "rimraf": "^3.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "typescript": "^4.3.5"
  },
  "keywords": [
    "eslint",
    "prettier"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
